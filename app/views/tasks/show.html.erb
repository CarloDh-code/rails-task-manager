<div class="container">
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "done" : "pending"%></p>
<br>
<%= link_to 'Edit task', edit_task_path %>
<br>
<%= link_to 'Back to list', tasks_path, class: 'button' %>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'button'
%>
</div>
